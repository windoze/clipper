{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "containerGroupName": {
            "type": "string",
            "defaultValue": "clipper-server",
            "metadata": {
                "description": "Name for the Container Instance"
            }
        },
        "storageAccountName": {
            "type": "string",
            "defaultValue": "[concat('clipper', uniqueString(resourceGroup().id))]",
            "metadata": {
                "description": "Name for the storage account (must be globally unique)"
            }
        },
        "fileShareName": {
            "type": "string",
            "defaultValue": "clipper-data",
            "metadata": {
                "description": "Name for the Azure File Share"
            }
        },
        "bearerToken": {
            "type": "securestring",
            "metadata": {
                "description": "Bearer token for Clipper server authentication"
            }
        },
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]",
            "metadata": {
                "description": "Location for all resources"
            }
        },
        "cpuCores": {
            "type": "string",
            "defaultValue": "1",
            "metadata": {
                "description": "Number of CPU cores for the container"
            }
        },
        "memoryInGb": {
            "type": "string",
            "defaultValue": "1.5",
            "metadata": {
                "description": "Memory in GB for the container"
            }
        },
        "imageName": {
            "type": "string",
            "defaultValue": "windoze/clipper-server",
            "metadata": {
                "description": "Docker image name for the clipper-server container (e.g., your-registry/clipper-server)"
            }
        },
        "imageTag": {
            "type": "string",
            "defaultValue": "backup",
            "metadata": {
                "description": "Docker image tag (use 'backup' for ACI with database persistence)"
            }
        },
        "dnsNameLabel": {
            "type": "string",
            "defaultValue": "[parameters('containerGroupName')]",
            "metadata": {
                "description": "DNS name label for the container (will be <label>.<region>.azurecontainer.io)"
            }
        },
        "acmeEmail": {
            "type": "string",
            "metadata": {
                "description": "Contact email for Let's Encrypt certificate notifications (required)"
            }
        },
        "enableBackup": {
            "type": "bool",
            "defaultValue": true,
            "metadata": {
                "description": "Enable automatic backup on shutdown and restore on startup"
            }
        },
        "includeFilesInBackup": {
            "type": "bool",
            "defaultValue": false,
            "metadata": {
                "description": "Include file attachments in backup (increases backup size)"
            }
        }
    },
    "variables": {
        "containerFqdn": "[concat(parameters('dnsNameLabel'), '.', parameters('location'), '.azurecontainer.io')]"
    },
    "resources": [
        {
            "type": "Microsoft.Storage/storageAccounts",
            "apiVersion": "2023-01-01",
            "name": "[parameters('storageAccountName')]",
            "location": "[parameters('location')]",
            "sku": {
                "name": "Standard_LRS"
            },
            "kind": "StorageV2",
            "properties": {
                "accessTier": "Hot",
                "supportsHttpsTrafficOnly": true,
                "minimumTlsVersion": "TLS1_2"
            }
        },
        {
            "type": "Microsoft.Storage/storageAccounts/fileServices",
            "apiVersion": "2023-01-01",
            "name": "[concat(parameters('storageAccountName'), '/default')]",
            "dependsOn": [
                "[resourceId('Microsoft.Storage/storageAccounts', parameters('storageAccountName'))]"
            ],
            "properties": {}
        },
        {
            "type": "Microsoft.Storage/storageAccounts/fileServices/shares",
            "apiVersion": "2023-01-01",
            "name": "[concat(parameters('storageAccountName'), '/default/', parameters('fileShareName'))]",
            "dependsOn": [
                "[resourceId('Microsoft.Storage/storageAccounts/fileServices', parameters('storageAccountName'), 'default')]"
            ],
            "properties": {
                "shareQuota": 5
            }
        },
        {
            "type": "Microsoft.ContainerInstance/containerGroups",
            "apiVersion": "2023-05-01",
            "name": "[parameters('containerGroupName')]",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[resourceId('Microsoft.Storage/storageAccounts/fileServices/shares', parameters('storageAccountName'), 'default', parameters('fileShareName'))]"
            ],
            "properties": {
                "containers": [
                    {
                        "name": "[parameters('containerGroupName')]",
                        "properties": {
                            "image": "[concat(parameters('imageName'), ':', parameters('imageTag'))]",
                            "resources": {
                                "requests": {
                                    "cpu": "[json(parameters('cpuCores'))]",
                                    "memoryInGB": "[json(parameters('memoryInGb'))]"
                                }
                            },
                            "ports": [
                                {
                                    "port": 80,
                                    "protocol": "TCP"
                                },
                                {
                                    "port": 443,
                                    "protocol": "TCP"
                                }
                            ],
                            "environmentVariables": [
                                {
                                    "name": "PORT",
                                    "value": "80"
                                },
                                {
                                    "name": "CLIPPER_TLS_PORT",
                                    "value": "443"
                                },
                                {
                                    "name": "CLIPPER_BEARER_TOKEN",
                                    "secureValue": "[parameters('bearerToken')]"
                                },
                                {
                                    "name": "CLIPPER_ACME_ENABLED",
                                    "value": "true"
                                },
                                {
                                    "name": "CLIPPER_ACME_DOMAIN",
                                    "value": "[variables('containerFqdn')]"
                                },
                                {
                                    "name": "CLIPPER_ACME_EMAIL",
                                    "value": "[parameters('acmeEmail')]"
                                },
                                {
                                    "name": "CLIPPER_SHORT_URL_BASE",
                                    "value": "[concat('https://', variables('containerFqdn'))]"
                                },
                                {
                                    "name": "CLIPPER_DB_PATH",
                                    "value": "/tmp/db"
                                },
                                {
                                    "name": "CLIPPER_STORAGE_PATH",
                                    "value": "/data/storage"
                                },
                                {
                                    "name": "CLIPPER_BACKUP_ON_EXIT",
                                    "value": "[string(parameters('enableBackup'))]"
                                },
                                {
                                    "name": "CLIPPER_RESTORE_ON_START",
                                    "value": "[string(parameters('enableBackup'))]"
                                },
                                {
                                    "name": "CLIPPER_BACKUP_PATH",
                                    "value": "/data/backup.tar.gz"
                                },
                                {
                                    "name": "CLIPPER_INCLUDE_FILES",
                                    "value": "[string(parameters('includeFilesInBackup'))]"
                                }
                            ],
                            "volumeMounts": [
                                {
                                    "name": "clipper-data",
                                    "mountPath": "/data"
                                }
                            ]
                        }
                    }
                ],
                "osType": "Linux",
                "restartPolicy": "Always",
                "ipAddress": {
                    "type": "Public",
                    "ports": [
                        {
                            "port": 80,
                            "protocol": "TCP"
                        },
                        {
                            "port": 443,
                            "protocol": "TCP"
                        }
                    ],
                    "dnsNameLabel": "[parameters('dnsNameLabel')]"
                },
                "volumes": [
                    {
                        "name": "clipper-data",
                        "azureFile": {
                            "shareName": "[parameters('fileShareName')]",
                            "storageAccountName": "[parameters('storageAccountName')]",
                            "storageAccountKey": "[listKeys(resourceId('Microsoft.Storage/storageAccounts', parameters('storageAccountName')), '2023-01-01').keys[0].value]"
                        }
                    }
                ]
            }
        }
    ],
    "outputs": {
        "containerFqdn": {
            "type": "string",
            "value": "[variables('containerFqdn')]"
        },
        "containerUrl": {
            "type": "string",
            "value": "[concat('https://', variables('containerFqdn'))]"
        },
        "containerIpAddress": {
            "type": "string",
            "value": "[reference(resourceId('Microsoft.ContainerInstance/containerGroups', parameters('containerGroupName')), '2023-05-01').ipAddress.ip]"
        },
        "storageAccountName": {
            "type": "string",
            "value": "[parameters('storageAccountName')]"
        }
    }
}
