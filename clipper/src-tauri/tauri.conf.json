{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Clipper",
  "version": "0.13.1",
  "identifier": "codes.unwritten.clipper",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build:server && npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Clipper",
        "width": 1100,
        "height": 700,
        "minWidth": 360,
        "minHeight": 400,
        "visible": true,
        "shadow": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": [
      "binaries/clipper-server",
      "binaries/clipper-cli"
    ]
  }
}