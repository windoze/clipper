{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Clipper",
  "version": "0.17.0",
  "identifier": "codes.unwritten.clipper",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build:server && npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Clipper",
        "width": 1100,
        "height": 700,
        "minWidth": 360,
        "minHeight": 400,
        "visible": true,
        "shadow": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": [
      "binaries/clipper-server",
      "binaries/clipper-cli"
    ],
    "createUpdaterArtifacts": true
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDE0RDRBMzY2MEQ0NEUzNTAKUldSUTQwUU5acVBVRkVUdjhPc04wTkExNms2TnN3cWtFNTNkWTlqR3U5Y05uZWo1ek9nNGw0dEgK",
      "endpoints": [
        "https://github.com/windoze/clipper/releases/latest/download/latest.json"
      ]
    }
  }
}